<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kazuyevon.laminateur.MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/textLaizeBobineMere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/butLaizeBobineMere"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignTop="@+id/butLaizeBobineMere"
                android:layout_toLeftOf="@+id/butLaizeBobineMere"
                android:layout_toStartOf="@+id/butLaizeBobineMere"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/hintLaizeBobineMere"
                android:inputType="number"
                android:textSize="12sp" />

            <Button
                android:id="@+id/butLaizeBobineMere"
                style="@style/MyButtons"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="@string/butLaizeBobineMere"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/textLisiereGauche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/butLisiere"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/butLisiere"
                android:layout_below="@+id/textLaizeBobineMere"
                android:layout_toLeftOf="@+id/butCalc"
                android:layout_toStartOf="@+id/butCalc"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/hintLisiereGauche"
                android:inputType="number"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/textLisiereDroite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/butLisiere"
                android:layout_alignEnd="@+id/textLaizeBobineMere"
                android:layout_alignLeft="@+id/butCalc"
                android:layout_alignRight="@+id/textLaizeBobineMere"
                android:layout_alignStart="@+id/butCalc"
                android:layout_alignTop="@+id/butLisiere"
                android:layout_below="@+id/textLaizeBobineMere"
                android:layout_toEndOf="@+id/textLisiereGauche"
                android:layout_toLeftOf="@+id/butLisiere"
                android:layout_toRightOf="@+id/textLisiereGauche"
                android:layout_toStartOf="@+id/butLisiere"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/hintLisiereDroite"
                android:inputType="number"
                android:textSize="12sp" />

            <Button
                android:id="@+id/butLisiere"
                style="@style/MyButtons"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/butLaizeBobineMere"
                android:layout_toEndOf="@+id/textLaizeBobineMere"
                android:layout_toRightOf="@+id/textLaizeBobineMere"
                android:text="@string/butLisiere"
                android:textSize="10sp" />

            <!-- Continuer a ranger -->

            <EditText
                android:id="@+id/textNbCouteaux"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/butNbCouteaux"
                android:layout_alignEnd="@+id/textLaizeBobineMere"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/textLaizeBobineMere"
                android:layout_alignTop="@+id/butNbCouteaux"
                android:layout_toLeftOf="@+id/butNbCouteaux"
                android:layout_toStartOf="@+id/butNbCouteaux"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/hintNbCouteaux"
                android:inputType="number"
                android:textSize="12sp" />

            <Button
                android:id="@+id/butNbCouteaux"
                style="@style/MyButtons"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/butLisiere"
                android:layout_toEndOf="@+id/textLaizeBobineMere"
                android:layout_toRightOf="@+id/textLaizeBobineMere"
                android:text="@string/butNbCouteaux"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/textLisiereRecoupeGauche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/butLisiereRecoupe"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/butLisiereRecoupe"
                android:layout_below="@+id/textNbCouteaux"
                android:layout_toLeftOf="@+id/butCalc"
                android:layout_toStartOf="@+id/butCalc"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/hintLisiereRecoupeGauche"
                android:inputType="number"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/textLisiereRecoupeDroite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/butLisiereRecoupe"
                android:layout_alignEnd="@+id/textLaizeBobineMere"
                android:layout_alignLeft="@+id/butCalc"
                android:layout_alignRight="@+id/textLaizeBobineMere"
                android:layout_alignStart="@+id/butCalc"
                android:layout_alignTop="@+id/butLisiereRecoupe"
                android:layout_below="@+id/textNbCouteaux"
                android:layout_toEndOf="@+id/textLisiereRecoupeGauche"
                android:layout_toLeftOf="@+id/butLisiereRecoupe"
                android:layout_toRightOf="@+id/textLisiereRecoupeGauche"
                android:layout_toStartOf="@+id/butLisiereRecoupe"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/hintLisiereRecoupeDroite"
                android:inputType="number"
                android:textSize="12sp" />

            <Button
                android:id="@+id/butLisiereRecoupe"
                style="@style/MyButtons"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/butNbCouteaux"
                android:layout_toEndOf="@+id/textLaizeBobineMere"
                android:layout_toRightOf="@+id/textLaizeBobineMere"
                android:text="@string/butLisiereRecoupe"
                android:textSize="10sp" />

            <Switch
                android:id="@+id/butSwitchCalc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textLisiereRecoupeGauche"
                android:layout_marginTop="50dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/butSwitchCalc" />

            <Button
                android:id="@+id/butCalc"
                style="@style/MyButtons"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|center"
                android:enabled="false"
                android:text="@string/butCommande"
                android:textSize="12sp" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
